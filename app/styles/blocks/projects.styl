.projects
  min-width: 840px

  &__list
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: space-between
    list-style-type: none

  &__item
    position: relative

    flex-basis: 25%
    min-height: 350px

    background-position: center top
    background-size: cover
    background-repeat: no-repeat

  for $i in 1..8
    &__item:nth-of-type({$i})
      background-image: url("../img/product-photo-" + $i + ".jpg")

  &__desc
    position: absolute
    top: 50%
    left: 50%
    z-index: 5
    visibility: hidden
    opacity: 0
    transform: translate(-50%, -50%)

    transition: visibility 0s linear 0.4s, opacity 0.4s linear

  &__link
    display: block
    width: 100%
    height: 100%

    &::before
      position: absolute
      top: 0
      left: 0
      display: block
      visibility: hidden
      width: 100%
      height: 100%
      background-color: transparent
      content: ""
      opacity: 1

      transition: visibility 0s linear 0.4s, background-color 0.4s linear

    &:hover
      &::before
        visibility: visible
        background-color: rgba($cinnabar, 0.9)

        transition: background-color 0.4s linear

      .projects__desc
        visibility: visible
        opacity: 1

        transition: opacity 0.4s linear

  &__title
    margin-bottom: 15px
    color: $white
    text-align: center
    font(14px, 11px, bold, uppercase)

  &__text
    color: $white
    text-align: center
    font(14px, 15px)
