.social
  flex-basis: 33.3%
  min-height: 250px
  text-align: center

  &__list
    list-style-type: none
    font-size: 0

  &__item
    display: inline-block
    margin-right: 15px

    &:last-of-type
      margin-right: 0

  &__link
    color: rgba($white, 0.5)

    &:hover .social__icon
      border-color: $cinnabar
      fill: $cinnabar

      transition: all 0.4s linear

  &__icon
    border: 2px solid $white
    border-radius: 2px
    fill: $white

    transition: all 0.4s linear

  &__title
    margin-top: 75px
    margin-bottom: 25px
    color: $white
    font(14px, 10px, 700, uppercase)
