.page-header
  position: relative
  background-color: $martinique
  background-image: url("../img/background.jpg")
  background-position: center top
  background-size: cover
  text-align: center

  min-height: 750px

  &::before
    position: absolute
    top: 0
    left: 0
    display: block
    width: 100%
    height: 100%
    background-color: rgba(43, 46, 74, 0.95)
    content: ""

  &__title
  &__text
    position: relative
    z-index: 5
    margin: auto
    color: $white
    text-align: center

  &__title
    margin-bottom: 40px
    max-width: 970px
    font(65px, 71px, 700, uppercase)

  &__text
    margin-bottom: 77px
    max-width: 950px
    font(22px, 33px, 400)

  &__btn
    position: relative
    z-index: 5
