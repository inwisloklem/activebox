.menu
  position: relative
  z-index: 5

  display: flex
  flex-direction: row
  justify-content: space-between
  align-items: center
  margin-bottom: 120px

  min-width: 600px
  min-height: 100px

  white-space: nowrap


  &__list
    list-style-type: none

  &__item
    display: inline-block
    margin-right: 60px

    &:last-of-type
      margin-right: 0

  &__link
    position: relative
    color: $white
    text-decoration: none
    font(13px, 11px, 600, uppercase)
    opacity: 0.75
    transition: opacity 0.6s linear

    &::after
      position: absolute
      bottom: -10px
      left: 0
      width: 100%
      height: 2px
      background-color: $white
      content: ""
      opacity: 0
      transition: opacity 0.4s linear

    &:hover
      opacity: 1
      transition: opacity 0.6s linear

      &::after
        opacity: 1
        transition: opacity 0.4s linear
